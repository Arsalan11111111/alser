<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <data>

        <record model="ir.ui.view" id="pc_view_sale_order_tree_ext">
            <field name="name">Sale order Tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <data>
                      <xpath expr="//field[@name='activity_ids']" position="after">
                         <field name="x_studio_servido_parcialmente"/>
                    </xpath>
                </data>
            </field>
        </record>
           
           <record model="ir.ui.view" id="pc_view_sale_order_form_ext">
            <field name="name">Sale order Form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
             <xpath expr="//field[@name='payment_mode_id']" position="after">
                <field name="x_studio_servido_parcialmente" string="Estado Pedido" widget="selection"/>
             </xpath>
                </data>
            </field>
        </record>



       </data>
</odoo>